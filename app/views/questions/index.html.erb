<div class="container-login">
  <h1>新規投稿</h1>
  <%= form_with model: @question, local: true do |form| %>
    <div class="form-group">
      <p>【質問】</p>
      <%= form.text_area :title, class: "form-control", rows: 4 %>
    </div>
    <div class="form-group">
      <p>【詳細】</p>
      <%= form.text_area :content, class: "form-control", rows: 7 %>
    </div>
    <div>
      <%= form.submit "送信", class: "btn btn-primary btn-block" %> 
    </div>
  <% end %>
  <% @questions.each do |question| %>
    <%= link_to question do %>
      <div style="padding: 30px; margin-bottom: 10px; margin-top: 10px; border: 2px solid #333333; border-radius: 10px;">
        <div class="row question-wrapper">
          <div class="col-md-7 question-title">
            <h2><%= question.title %></h2>
          </div>
          <div class="col-md-5 question-date">
            <p>質問日  <%= l question.created_at, format: :short %></p>
          </div> 
        </div>
      </div>
    <% end %> 
  <% end %>
</div> 
